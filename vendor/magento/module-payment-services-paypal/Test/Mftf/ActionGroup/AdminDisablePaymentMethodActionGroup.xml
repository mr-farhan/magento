<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDisablePaymentMethodActionGroup">
        <annotations>
            <description>Disable payment method in admin.</description>
        </annotations>
        <magentoCLI command="config:set payment/payment_services/active 0" stepKey="disablePaymentMethod"/>
    </actionGroup>
</actionGroups>
